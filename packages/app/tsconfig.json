{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "allowJs": true,
    "checkJs": true,
    "rootDir": ".",
    "strict": false,
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "lib"
  ],
  "exclude": [
    "node_modules"
  ]
}
