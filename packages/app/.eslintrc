{
  "extends": [
    "plugin:bpmn-io/es6"
  ],
  "env": {
    "node": true,
    "es6": true
  },
  "rules": {
    "comma-dangle": [ "error", "never" ],
    "require-atomic-updates": "off",
    "graphql/template-strings": [ "error", {
      "env": "literal",
      "tagName": "gql"
    } ]
  },
  "plugins": [
    "graphql"
  ]
}