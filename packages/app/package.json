{
  "name": "wuffle",
  "version": "0.37.0",
  "description": "The wuffle board back-end",
  "author": {
    "name": "Nico Rehwaldt",
    "url": "https://github.com/nikku"
  },
  "bin": {
    "wuffle": "./bin/wuffle"
  },
  "license": "MIT",
  "homepage": "https://github.com/nikku/wuffle",
  "repository": {
    "type": "git",
    "url": "https://github.com/nikku/wuffle.git",
    "directory": "packages/app"
  },
  "keywords": [
    "probot",
    "github",
    "probot-app",
    "github issues",
    "task board",
    "kanban board",
    "project management"
  ],
  "scripts": {
    "all": "run-s lint lint:types test",
    "dev": "nodemon",
    "start": "NODE_ENV=production node ./bin/wuffle",
    "test": "mocha 'test/**/*.js' --exit",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint .",
    "lint:types": "tsc --pretty",
    "auto-test": "npm test -- --watch"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.3.0",
    "async-didi": "^0.2.1",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "express-session": "^1.17.1",
    "memorystore": "^1.6.4",
    "min-dash": "^3.5.2",
    "mkdirp": "^1.0.4",
    "p-defer": "^3.0.0",
    "prexit": "0.0.5",
    "probot": "^11.0.5",
    "smee-client": "^1.2.2"
  },
  "devDependencies": {
    "@types/express-session": "^1.17.3",
    "@types/node-fetch": "^2.5.8",
    "chai": "^4.2.0",
    "eslint": "^7.18.0",
    "eslint-plugin-bpmn-io": "^0.11.0",
    "mocha": "^8.2.1",
    "nock": "^13.0.6",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "sinon": "^9.2.3",
    "sinon-chai": "^3.5.0",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": ">= 14.0"
  },
  "nodemonConfig": {
    "exec": "node ./bin/wuffle",
    "env": {
      "NODE_ENV": "development"
    },
    "watch": [
      ".env",
      "."
    ],
    "ignore": [
      "public/*",
      "tmp/*",
      "test/*"
    ]
  }
}
