{
  "name": "wuffle",
  "version": "0.50.1",
  "description": "A multi-repository task board for GitHub issues",
  "author": {
    "name": "Nico Rehwaldt",
    "url": "https://github.com/nikku"
  },
  "bin": {
    "wuffle": "./bin/wuffle"
  },
  "license": "MIT",
  "homepage": "https://github.com/nikku/wuffle",
  "repository": {
    "type": "git",
    "url": "https://github.com/nikku/wuffle.git",
    "directory": "packages/app"
  },
  "keywords": [
    "probot",
    "github",
    "probot-app",
    "github issues",
    "task board",
    "kanban board",
    "project management"
  ],
  "scripts": {
    "all": "run-s lint lint:types test",
    "dev": "nodemon",
    "start": "NODE_ENV=production node ./bin/wuffle",
    "test": "mocha 'test/**/*.js' --exit",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint .",
    "lint:types": "tsc --pretty",
    "auto-test": "npm test -- --watch"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.110.0",
    "async-didi": "^0.3.1",
    "body-parser": "^1.20.0",
    "compression": "^1.7.4",
    "express-session": "^1.17.3",
    "fake-tag": "^3.0.0",
    "memorystore": "^1.6.7",
    "min-dash": "^3.8.1",
    "mkdirp": "^1.0.4",
    "p-defer": "^3.0.0",
    "prexit": "0.0.5",
    "probot": "^12.2.4",
    "smee-client": "^1.2.3"
  },
  "devDependencies": {
    "@graphql-eslint/eslint-plugin": "^3.11.2",
    "@octokit/graphql-schema": "^12.10.0",
    "@types/compression": "^1.7.2",
    "@types/express-session": "^1.17.4",
    "@types/mkdirp": "^1.0.2",
    "chai": "^4.3.6",
    "graphql": "^16.6.0",
    "mocha": "^9.2.2",
    "nock": "^13.2.7",
    "nodemon": "^2.0.16",
    "npm-run-all": "^4.1.5",
    "sinon": "^12.0.1",
    "sinon-chai": "^3.7.0",
    "typescript": "^4.7.3"
  },
  "engines": {
    "node": "14.x || 16.x"
  },
  "nodemonConfig": {
    "exec": "node ./bin/wuffle",
    "env": {
      "NODE_ENV": "development"
    },
    "watch": [
      ".env",
      "."
    ],
    "ignore": [
      "public/*",
      "tmp/*",
      "test/*"
    ]
  },
  "files": [
    "bin",
    "lib",
    "public",
    "app.yml",
    "index.js",
    "wuffle.config.example.js"
  ]
}
